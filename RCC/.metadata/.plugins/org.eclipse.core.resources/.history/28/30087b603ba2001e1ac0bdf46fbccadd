/*****************************************************************************************************************************************
***************************************************************RCC control register configurations**************************************************************
*****************************************************************************************************************************************/
typedef enum
{
	HSI_OFF,
	HSI_on
};
typedef enum
{
	HSE_OFF,
	HSE_on
};
typedef enum
{
	PLL_OFF,
	PLL_on
};
typedef enum
{
	HSI_NRDY,
	HSI_RDY
};
typedef enum
{
	HSE_NRDY,
	HSE_RDY
};
typedef enum
{
	PLL_NRDY,
	PLL_RDY
};
typedef enum
{
	CLKSEC_OFF,
	CLKSEC_ON
};

/*****************************************************************************************************************************************
***************************************************************RCC configure register configurations**************************************************************
*****************************************************************************************************************************************/
typedef enum
{
	NO_CLK,
	HSI_CLK = 4,
	HSE_CLK = 5,
	PLL_CLK = 6
}CLK_t;
typedef enum //USBPRE (PLL)
{
	DIV_ONEHALF,
	NODIV
}USP_t;
typedef enum //PLLMUL
{
	PLLMUL_0,
	PLLMUL_1,
	PLLMUL_2,
	PLLMUL_3,
	PLLMUL_4,
	PLLMUL_5,
	PLLMUL_6,
	PLLMUL_7,
	PLLMUL_8,
	PLLMUL_9,
	PLLMUL_10,
	PLLMUL_11,
	PLLMUL_12,
	PLLMUL_13,
	PLLMUL_14,
	PLLMUL_15,
}PLLMUL_t;
typedef enum //PLLXTPRE
{
	HSE_NODIV,
	HSE_DIVBY_2
}PLLXTPRE_t;
typedef enum
{
	PLLMUL_0,
	PLLMUL_1,
	PLLMUL_2,
	PLLMUL_3,
	PLLMUL_4,
	PLLMUL_5,
	PLLMUL_6,
	PLLMUL_7,
	PLLMUL_8,
	PLLMUL_9,
	PLLMUL_10,
	PLLMUL_11,
	PLLMUL_12,
	PLLMUL_13,
	PLLMUL_14,
	PLLMUL_15,
}PLLMUL_t;

/*****************************************************************************************************************************************
***************************************************************functions prototype**************************************************************
*****************************************************************************************************************************************/
void RCC_voidInitSysClock(void);
u8 RCC_u8EnablePerClock(u8 copy_u8BusId,u8 copy_u8perId);
u8 RCC_u8DisablePerClock(u8 copy_u8BusId,u8 copy_u8perId);

